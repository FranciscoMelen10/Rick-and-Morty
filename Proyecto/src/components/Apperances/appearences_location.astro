---
interface Props {
  url: string;
}

// url: url de la api para hacer las consultas de los lugares de la serie
const { url } = Astro.props;

// contendra en formato json la api y usarlo afuera del servidor dentro del cliente
let informacion; 
try {
  const response = await fetch(`${url}`);
  informacion = await response.json();
} catch (error) {
  console.error(error);
}
---

<article class="contenedor_locations" slot="informacion_api">
  <div class="contendor_imagenes">
    <img
      src="./../../../../public/Fondo locations.png "
      alt={informacion.name}
      transition:name=`imagen_location_${informacion.id}`
    />
  </div>

  <div class="info_locations">
    <p class="name">{informacion.name}</p>
    <p>{informacion.type}</p>
    <p>{informacion.dimension}</p>
  </div>
  <a href={`../../Location/Individual/${informacion.id}`} class="click_more"
    >Click More</a
  >
</article>

<style>
  .contenedor_locations {
    background-color: var(--bg_hr);
    border-radius: 20px;
    width: 500px;
    height: 250px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: 0.5s ease all;
    font-family: "open sans", sans-serif;
  }

  .click_more {
    position: absolute;
    background: #00ac7c;
    height: 100%;
    width: 80px;
    transition: all 80ms;
    font-weight: 600;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    text-align: center;
    border-radius: 0 10px 10px 0;
    opacity: 0;
    right: 0;
    text-decoration: none;
    color: var(--letras);
    transition: 0.5s ease all;
  }

  .contenedor_locations:hover .click_more {
    opacity: 1;
    text-decoration: underline;
  }

  .contenedor_locations:hover {
    cursor: pointer;
    transform: scale(0.9);
  }

  .contendor_imagenes {
    width: 50%;
    height: 100%;
  }

  img {
    width: 100%;
    height: 100%;
    border-radius: 20px 0 0 20px;
  }

  .info_locations {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 40%;
    margin: 20px;
  }

  .name {
    font-size: 20px;
    font-weight: 800;
  }

  @media screen and (max-width: 650px) {
    .name {
      font-size: 10px;
    }
  }
</style>
