---
import CharactersComponente from "../../components/Principal/characters_componente.astro";
import Paginacion from "../../components/paginacion.astro";
import Principal from "../../layout/principal.astro";

let informacion;
try {
  const response = await fetch("https://rickandmortyapi.com/api/character");
  informacion = await response.json();
} catch (error) {
  console.error(error);
}

---

<Principal>
    <CharactersComponente name="Character" url="https://rickandmortyapi.com/api/character" view={false}></CharactersComponente>
    <article>
        <Paginacion next_page={informacion.info.next} last_page={informacion.info.prev} slot="paginacion"></Paginacion>
    </article>
</Principal>

<style>
    article{
        display: flex;
        justify-content: center;
        margin: -20vh 0 30vh 0;
    }
</style>