---
import EpisodeComponente from "../../components/Principal/episode__componente.astro";
import Paginacion from "../../components/paginacion.astro";
import Principal from "../../layout/principal.astro";

let informacion;
try {
  const response = await fetch("https://rickandmortyapi.com/api/episode");
  informacion = await response.json();
} catch (error) {
  console.error(error);
}
---

<Principal>
  <EpisodeComponente
    name="Episode"
    url="https://rickandmortyapi.com/api/episode"
    view={false}
  />
  <article>
    <Paginacion
      next_page={informacion.info.next}
      last_page={informacion.info.prev}
      slot="paginacion"
    />
  </article>
</Principal>

<style>
  article {
    display: flex;
    justify-content: center;
    margin: 0 0 10vh 0;
  }
</style>
