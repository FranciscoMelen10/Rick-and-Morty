import Principal from "../../layout/principal.astro";

export async function getStaticPaths() {
  const data = await fetch("https://rickandmortyapi.com/api/location").then((response) => response.json()
  );
  return data.results.map((post) => {
    return {
      params: { location: post.id },
      props: { post },
    };
  });
}

const {location} = Astro.params

let informacion;
try {
  const response = await fetch(
    "https://rickandmortyapi.com/api/location/" + location
  );
  informacion = await response.json();
} catch (error) {
  console.error(error);
}

